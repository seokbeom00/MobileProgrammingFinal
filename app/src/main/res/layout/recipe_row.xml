<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_row"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_border"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="21dp"
        android:layout_marginVertical="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipeName"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:autoSizeMaxTextSize="24dp"
            android:autoSizeMinTextSize="8dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:text="레시피" />

        <TextView
            android:id="@+id/havingIngredientCount"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="n"
            android:layout_marginLeft="49dp"
            android:textColor="#27962C"
            android:autoSizeMaxTextSize="18dp"
            android:autoSizeTextType="uniform" />
        <TextView
            android:id="@+id/havingIngredientCount_fixedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개 재료 보유"
            android:textColor="#27962C"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/Slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="@color/black"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/allStuffCount_FixedText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 "
            android:textColor="@color/black"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/allStuffCount"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="m"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp" />
        <TextView
            android:id="@+id/allStuffCount_FixedText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:text="개"
            android:textColor="@color/black"
            android:textSize="18dp" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="bottom"
            android:src="@drawable/baseline_star_border_24"/>
    </LinearLayout>

</LinearLayout>